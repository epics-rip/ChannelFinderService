<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ServletAdaptor</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>
                gov.bnl.channelfinder.ResponseCorsFilter,
                gov.bnl.channelfinder.MyJAXBContextResolver,
                org.glassfish.jersey.media.multipart.MultiPartFeature,
                org.glassfish.jersey.jackson.JacksonFeature,
                gov.bnl.channelfinder.ChannelsResource,
                gov.bnl.channelfinder.PropertiesResource,
                gov.bnl.channelfinder.TagsResource
            </param-value>
        </init-param>
        <init-param>
            <param-name>jersey.config.disableMoxyJson</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAdaptor</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>gov.bnl.channelfinder.ElasticSearchClient</listener-class>
    </listener>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>Add or Modify Channels</display-name>
        <web-resource-collection>
            <web-resource-name>create / update / delete channel(s)</web-resource-name>
            <description/>
            <url-pattern>/resources/channels/*</url-pattern>
            <http-method>PUT</http-method>
            <http-method>POST</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>ChannelMod</role-name>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Add or Modify Properties</display-name>
        <web-resource-collection>
            <web-resource-name>create / update / delete properties</web-resource-name>
            <description/>
            <url-pattern>/resources/properties/*</url-pattern>
            <http-method>PUT</http-method>
            <http-method>POST</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>PropertyMod</role-name>
            <role-name>ChannelMod</role-name>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Add or Modify Tags</display-name>
        <web-resource-collection>
            <web-resource-name>create / update / delete tags</web-resource-name>
            <description/>
            <url-pattern>/resources/tags/*</url-pattern>
            <http-method>PUT</http-method>
            <http-method>POST</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>TagMod</role-name>
            <role-name>PropertyMod</role-name>
            <role-name>ChannelMod</role-name>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>channelfinder</realm-name>
    </login-config>
    <security-role>
        <description>May add or modify channels</description>
        <role-name>ChannelMod</role-name>
    </security-role>
    <security-role>
        <description>May add or modify properties</description>
        <role-name>PropertyMod</role-name>
    </security-role>
    <security-role>
        <description>May add or modify tags</description>
        <role-name>TagMod</role-name>
    </security-role>
    <security-role>
        <description>Directory administrator</description>
        <role-name>Administrator</role-name>
    </security-role>
    <resource-ref>
        <res-ref-name>UserTransaction</res-ref-name>
        <res-type>javax.transaction.UserTransaction</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
